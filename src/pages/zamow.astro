---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Grzybowy blog">

  <main>
    <header>
      <h1>Zamów swoje grzybki</h1>
    </header>
    <article>
      <form method="post">
        <div class="rodzaj">
          <fieldset>
            <legend>Jaki grzybek?</legend>

            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Reishi</label
              >
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Shiitake</label
              >
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Lion's mane</label
              >
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Chaga
              </label>
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Cordyceps</label
              >
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Maitake</label
              >
            </div>
          </fieldset>
        </div>
        <div class="przygotowanie">
          <label for="przygotowanie"> Jak przygotowany?</label>
          <select id="przygotowanie" name="przygotowanie">
            <option value="s" selected>surowy</option>
            <option value="susz">suszony</option>
            <option value="k">kiszony</option>
            <option value="m">marynowany</option>
          </select>
        </div>
        <div class="slidecontainer">
          <input
            type="range"
            min="1"
            max="100"
            value="50"
            class="slider"
            id="myRange"
          />
          <h2 id="value">50kg</h2>
          <script>
            const h2 = document.getElementById("value");
            const myRange = document.getElementById("myRange");

            myRange?.addEventListener("change", () => {
              if (myRange && h2) {
                (h2 as HTMLHeadingElement).textContent =
                  (myRange as HTMLInputElement).value + "kg";
              }
            });
          </script>
        </div>
        <div class="imiekom">
          <label>
            Imię <input
              type="text"
              name="imie"
              placeholder="Podaj Imię"
              required
            /></label
          >
          <label> Hasło <input type="password" name="haslo" /></label>
          <label for="komentarz">Dodatkowe uwagi:</label>
          <textarea id="komentarz" rows="25" cols="44"></textarea>
        </div>
        <div class="emailphone">
          <label>
            Adres e-mail <input type="email" name="adres" required /></label
          >
          <label>
            Podaj numer w wymaganym formacie <input
              type="tel"
              name="telefon"
              placeholder="xxx-xxx-xxx"
              required
            /></label
          >
          <small>Format: 123-456-789</small>
        </div>
        <div class="obrazek">
          <input
            type="image"
            name="imageSubmit"
            value="obrazek"
            src="acceptshroom.png"
            height="70px"
            alt="Jakiś obrazek"
          />
        </div>
        <div class="wyslij">
          <label> Wyślij</label>
        </div>
      </form>
    </article>
  </main>
</Layout>

<style>
