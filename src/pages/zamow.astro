---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Grzybowy blog">
  <main>
    <header>
      <h1>Zamów swoje grzybki</h1>
    </header>
    <article>
      <form method="post">
        <div class="rodzaj">
          <fieldset>
            <legend>Jaki grzybek?</legend>

            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Reishi</label
              >
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Shiitake</label
              >
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Lion's mane</label
              >
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Chaga
              </label>
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Cordyceps</label
              >
            </div>
            <div>
              <label
                ><input type="radio" value="3" name="grzybek" /> Maitake</label
              >
            </div>
          </fieldset>
        </div>
        <div class="przygotowanie">
          <label for="przygotowanie"> Jak przygotowany?</label>
          <select id="przygotowanie" name="przygotowanie">
            <option value="s" selected>surowy</option>
            <option value="susz">suszony</option>
            <option value="k">kiszony</option>
            <option value="m">marynowany</option>
          </select>
        </div>
        <div class="slidecontainer">
          <input
            type="range"
            min="1"
            max="100"
            value="50"
            class="slider"
            id="myRange"
          />
          <h2 id="value">50kg</h2>
          <script>
            const h2 = document.getElementById("value");
            const myRange = document.getElementById("myRange");

            myRange?.addEventListener("change", () => {
              if (myRange && h2) {
                (h2 as HTMLHeadingElement).textContent =
                  (myRange as HTMLInputElement).value + "kg";
              }
            });
          </script>
        </div>
        <div class="imiekom">
          <label>
            Imię <input
              type="text"
              name="imie"
              placeholder="Podaj Imię"
              pattern="^[a-zA-ZąćęłńóśźżĄĘŁŃÓŚŹŻ ]+$"
              required
            /></label
          >
          <label> Hasło <input type="password" name="haslo" /></label>
          <label for="komentarz">Dodatkowe uwagi:</label>
          <textarea id="komentarz" rows="25" cols="44"></textarea>
        </div>
        <div class="emailphone">
          <label>
            Adres e-mail <input type="email" name="adres" required /></label
          >
          <label>
            Podaj numer w wymaganym formacie <input
              type="tel"
              name="telefon"
              placeholder="xxx-xxx-xxx"
              pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}"
              required
            /></label
          >
          <small>Format: 123-456-789</small>
        </div>
        <div class="adres">
          <h1>Adres dostawy</h1>
          <label>
            Kod pocztowy <input
              type="text"
              name="kod"
              placeholder="xx-xxx"
              pattern="[0-9]{2}-[0-9]{3}"
              required
            />
          </label>
          <label>
            Miejscowość <input type="text" name="miejscowosc" required />
          </label>
          <label>
            Ulica <input type="text" name="ulica" required />
          </label>
          <label>
            Numer domu <input type="text" name="numer" required />
          </label>
        </div>

        <div class="zamow">
          <input class="button-input" type="submit" value="Zamawiam!" />
          <!--<input type="button" value="Zamawiam!">
					<button type="button">Zamawiam!</button>-->
          <input class="button-input" type="reset" value="Wyczyść formularz" />
          <input
            class="obrazek"
            type="image"
            name="imageSubmit"
            value="obrazek"
            src="acceptshroom.png"
            height="70px"
            alt="Jakiś obrazek"
          />
        </div>
      </form>
    </article>
  </main>

  <style>
    main {
      display: flex;
      justify-content: center;
      align-items: center;

      width: 100vw;
      flex-direction: column;
    }

    form {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      border: 3px solid white;
      border-radius: 15px;
      padding: 20px;
    }
    header {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100px;
      border-radius: 15px;
      margin-bottom: 20px;
    }
    .przygotowanie {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100px;
      border-radius: 15px;
      margin-bottom: 0px;
      margin-top: 0px;
    }
    .slidecontainer {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100px;
      border-radius: 15px;
      margin-bottom: 10px;
      margin-top: 0;
      border: 3px solid white;
      padding: 5px;
    }
    .imiekom {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      border-radius: 15px;
      margin-bottom: 10px;
      margin-top: 0;
      border: 3px solid white;
      padding: 5px;
    }
    .emailphone {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      border-radius: 15px;
      margin-bottom: 10px;
      margin-top: 0;
      border: 3px solid white;
      padding: 5px;
    }
    .adres {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      border-radius: 15px;
      margin-bottom: 10px;
      margin-top: 0;
      border: 3px solid white;
      padding: 5px;
    }
    .adres h1 {
      margin-bottom: 0;
      margin-top: 0;
      padding-top: 0;
    }
    .zamow {
      display: flex;
      flex-direction: column-reverse;
      justify-content: center;
      align-items: center;
      border-radius: 15px;
      margin-bottom: 10px;
      margin-top: 0;
      padding: 5px;
      border: 3px solid white;
    }
    .button-input {
      /* make it look modern */
      background-color: #4c81af;
      border: none;
      color: white;
      margin: 3px;
      font-size: 16px;
      transition: all 0.1s;
    }
    .button-input:hover {
      background-color: #af4c59;
      color: white;
      cursor: pointer;
      border-radius: 10px;
    }
    .obrazek {
      margin-bottom: 5px;
      border-radius: 50px;
    }
  </style>
</Layout>
